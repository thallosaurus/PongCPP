            "valuesFormatting": "parseText",
            "preLaunchTask": "CMake: Build",
            "debugger_args": []//,
            // "arguments": "-se="
        },
        {
            "name": "CMake - Build and run",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/PongCPP",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
