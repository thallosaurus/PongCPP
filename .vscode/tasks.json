{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "shell",
            "label": "Shell: Create Build Folder",
            "command": "mkdir",
            "args": [
                "-p",
                "build"
            ]
        },
        {
            "type": "shell",
            "label": "CMake: Build Cache",
            "command": "/usr/bin/cmake",
            "args": [
                "."
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": "Shell: Create Build Folder"
        },
        {
            "type": "shell",
            "label": "CMake: Build",
            "command": "/usr/bin/cmake",
            "args": [
                "--build",
                ".",
                "--config",
                "Debug;"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": "Shell: Build Cache"
        },
        {
            "type": "shell",
            "label": "Git: restore Repository",
            "command": "rm",
            "args": [
                "-rf",
                "$(cat",
                ".gitignore)"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        }
    ],
    "version": "2.0.0"
}